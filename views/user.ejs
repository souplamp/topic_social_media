<!-- insert each title and the most recent two messages, if any (0-2) -->

<% insert.forEach(insert => { %>
    <% if(insert.title !== undefined) { %>
        <div id="demo"><%= insert.title %>
        <br><a href="/topic/<%=insert.title%>"><button>View</button></a></div>
    <% } %>
<% }); %>

